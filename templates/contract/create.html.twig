{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Créer un nouveau contrat
{% endblock %}
{% block stylesheets %}
	<link href="{{ asset('/assets/dashboard/css/select2.min.css') }}" rel="stylesheet"/>
{% endblock %}


{% block body %}
	<div uk-grid="" class="uk-child-width-1-1@s uk-child-width-1-1@l uk-grid uk-grid-stack">
		<div class="uk-first-column">
			<div class="uk-card uk-card-default">
				<div class="uk-card-header">
					Créer un contrat pour le logement "{{ housing.name }}"
				</div>
				<div class="uk-card-body">

					{{ form_start(form) }}

					<div class="uk-margin">
						{{ form_widget(form.name) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(form.rent) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(form.rentLoad) }}
					</div>

					<div class="uk-margin">
						{{ form_row(form.startDate) }}
					</div>

					<div class="uk-margin">
						{{ form_row(form.endDate) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(form.securityDeposit) }}
					</div>

					<div class="uk-margin">
						<p>Selectionnez le ou les locataires pour ce contrat</p>
						{{ form_widget(form.tenants) }}
					</div>
					<div class="uk-margin">
						<p>Selectionnez les équipmenents fournis</p>
						{{ form_widget(form.equipments) }}
					</div>


					<br>
					<button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">Enregistrer</button>
					<a href="{{ path('housing_detail', {'id' : housing.id}) }}">
						<button type="button" class="uk-button uk-button-secondary uk-width-1-1">Annuler</button>
					</a>

					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	<script src="{{ asset('/assets/dashboard/js/select2.min.js') }}"></script>
	<script src="{{ asset('/assets/dashboard/js/select.js') }}"></script>
{% endblock %}
