<div id="sidebar" class="tm-sidebar-left uk-background-default">
	<center>
		<div class="user">
			{% if app.user.avatar %}
				<img id="avatar" width="100" class="uk-border-circle" src="{{ asset('documents/images/users/avatars/' ~ app.user.avatar) }}"/>
			{% else %}
				<img id="avatar" width="100" class="uk-border-circle" src="{{ asset('documents/images/users/avatars/default.png') }}"/>
