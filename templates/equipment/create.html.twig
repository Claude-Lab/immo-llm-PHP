{% extends 'base.html.twig' %}

{% block title %}Hello EquipmentController!
{% endblock %}

{% block body %}
	<div uk-grid="" class="uk-child-width-1-1@s uk-child-width-1-1@l uk-grid uk-grid-stack">
		<div class="uk-first-column">
			<div class="uk-card uk-card-default">
				<div class="uk-card-header">
					Créer un équipement
				</div>
				<div class="uk-card-body">

					{{ form_start(equipmentForm) }}

					<div class="uk-margin">
						{{ form_widget(equipmentForm.name) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(equipmentForm.description) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(equipmentForm.modality) }}
					</div>

					<button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">Enregistrer</button>
					<a href="{{ path('dashboard') }}">
						<button type="button" class="uk-button uk-button-secondary uk-width-1-1">Annuler</button>
					</a>

					{{ form_end(equipmentForm) }}


				</div>
			</div>
		</div>
	</div>

{% endblock %}
