{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Tableau de bord
{% endblock %}

{% block body %}
	<div uk-grid class="uk-child-width-1-1@s uk-child-width-1-2@m uk-child-width-1-4@xl">
		<div>
			<div class="uk-card uk-card-default uk-card-body">
				<span class="statistics-text">Nombre de contrats en cours</span><br/>
				<span class="statistics-number">
					14.164
					<span class="uk-label uk-label-success">
						8%
						<span class="ion-arrow-up-c"></span>
					</span>
				</span>
			</div>
		</div>
		<div>
			<div class="uk-card uk-card-default uk-card-body">
				<span class="statistics-text">Nombre de locations</span><br/>
				<span class="statistics-number">
					123.238
					<span class="uk-label uk-label-danger">
						13%
						<span class="ion-arrow-down-c"></span>
					</span>
				</span>
			</div>
		</div>
		<div>
			<div class="uk-card uk-card-default uk-card-body">
				<span class="statistics-text">Cumul loyer sur l'année</span><br/>
				<span class="statistics-number">
					2.316
					<span class="uk-label uk-label-success">
						37%
						<span class="ion-arrow-up-c"></span>
					</span>
				</span>
			</div>
		</div>
		<div>
			<div class="uk-card uk-card-default uk-card-body">
				<span class="statistics-text">Cumul Charges sur l'année</span><br/>
				<span class="statistics-number">
					6.384€
					<span class="uk-label uk-label-success">
						26%
						<span class="ion-arrow-up-c"></span>
					</span>
				</span>
			</div>
		</div>
	</div>
	<div uk-grid class="uk-child-width-1-1@s uk-child-width-1-2@l">
		<div>
			<div class="uk-card uk-card-default">
				<div class="uk-card-header">
					Impôt foncier
				</div>
				<div class="uk-card-body">
					<canvas id="chart1"></canvas>
				</div>
			</div>
		</div>
		<div>
			<div class="uk-card uk-card-default">
				<div class="uk-card-header">
					Traffic Web
				</div>
				<div class="uk-card-body">
					<canvas id="chart2"></canvas>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
