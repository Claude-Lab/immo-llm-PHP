{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Types
{% endblock %}

{% block body %}
	<div uk-grid="" class="uk-child-width-1-1@s uk-child-width-1-1@l uk-grid uk-grid-stack">
		<div class="uk-first-column">
			<div class="uk-card uk-card-default">
				<div class="uk-card-header">
					Liste de tout les types
					<a href="{{ path('sort_create') }}">
						<button type="button" class="uk-button uk-button-primary uk-button-small uk-align-right@m">Créer un type</button>
					</a>
				</div>
				<div class="uk-card-body">
					{% if sorts is empty %}
						<div class="uk-placeholder uk-text-center ">
							<h5>Aucun type à afficher</h5>
							<p>Il semblerait qu'il n'y ait pas de type correspondant à votre recherche.</p>
						</div>
					{% else %}
						<table class="uk-table uk-table-striped">
							<thead>
								<tr>
									<th>Nom</th>
									<th>Detail</th>
									<th>Supprimer</th>
								</tr>
							</thead>
							<tbody>
								{% for sort in sorts %}
									<tr>
										<td>{{ sort.name }}</td>
										<td>
											<a href="{{ path('sort_edit', {'id' : sort.id}) }}">
												<button class="uk-button uk-button-primary uk-button-small">Modifier</button>
											</a>
										</td>
										<td>
											<a href="#modal-delete{{sort.id}}" uk-toggle>
												<button class="uk-button uk-button-danger uk-button-small">Supprimer</button>
											</a>
										</td>
									</tr>
									<div id="modal-delete{{sort.id}}" uk-modal>
										<div class="uk-modal-dialog">
											<button class="uk-modal-close-default" type="button" uk-close></button>
											<div class="uk-modal-header">
												<h2 class="uk-modal-title">Supprimer le type ?</h2>
											</div>
											<div class="uk-modal-body">
												<p>Êtes-vous certain de vouloir supprimer ce type ?</p>
											</div>
											<div class="uk-modal-footer uk-text-right">
												<button class="uk-button uk-button-primary uk-modal-close" type="button">Annuler</button>
												<a href="{{ path('state_delete', {'id' : sort.id}) }}">
													<button class="uk-button uk-button-danger" type="button">Supprimer</button>
												</a>
											</a>
										</div>
									</div>
								{% endfor %}
							</tbody>
						</table>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
