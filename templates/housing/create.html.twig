{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Création d'un logement
{% endblock %}

{% block body %}
	<div uk-grid="" class="uk-child-width-1-1@s uk-child-width-1-1@l uk-grid uk-grid-stack">
		<div class="uk-first-column">
			<div class="uk-card uk-card-default">
				<div class="uk-card-header">
					Créer un logement
				</div>
				<div class="uk-card-body">

					{{ form_start(housingForm) }}


					<div class="uk-margin">
						{{ form_widget(housingForm.name) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(housingForm.owner) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(housingForm.address.street) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(housingForm.address.city) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(housingForm.address.postCode) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(housingForm.address.country) }}
					</div>
					<div class="uk-margin">
						{{ form_widget(housingForm.sort) }}
					</div>
					<div class="uk-margin">
						{{ form_widget(housingForm.nbRoom) }}
					</div>
					<div class="uk-margin">
						{{ form_widget(housingForm.surface) }}
					</div>
					<div class="uk-margin">
						{{ form_widget(housingForm.floor) }}
					</div>
					<div class="uk-margin">
						{{ form_widget(housingForm.landSurface) }}
					</div>
					<div class="uk-margin">
						{{ form_widget(housingForm.nbFloor) }}
					</div>
					<div class="uk-margin">
						{{ form_row(housingForm.attic) }}
					</div>
					<div class="uk-margin">
						{{ form_row(housingForm.cellar) }}
					</div>
					<div class="uk-margin">
						{{ form_row(housingForm.pool) }}
					</div>
					<div class="uk-margin">
						{{ form_row(housingForm.box) }}
					</div>
					<div class="uk-margin">
						{{ form_row(housingForm.elevator) }}
					</div>

					<button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">Enregistrer</button>
					<a href="{{ path('housing_list') }}">
						<button type="button" class="uk-button uk-button-secondary uk-width-1-1">Annuler</button>
					</a>

					{{ form_end(housingForm) }}

				</div>
			</div>
		</div>
	</div>
{% endblock %}
