{% extends 'base.html.twig' %}

{% block title %}Hello UserController!
{% endblock %}

{% block body %}
	<div class="content-padder content-background">
		<div class="uk-section-small">
			<div class="uk-container uk-container-large">
				<div uk-grid="" class="uk-child-width-1-1@s uk-child-width-1-1@l uk-grid uk-grid-stack">
					<div class="uk-first-column">
						<div class="uk-card uk-card-default">
							<div class="uk-card-header">
								Créer un propriétaire
							</div>
							<div class="uk-card-body">

								{{ form_start(ownerForm) }}

								<div class="uk-margin">
									{{ form_widget(ownerForm.firstname) }}
								</div>

								<div class="uk-margin">
									{{ form_widget(ownerForm.lastname) }}
								</div>

								<div class="uk-margin">
									{{ form_widget(ownerForm.email) }}
								</div>

								<div class="uk-margin">
									{{ form_widget(ownerForm.mobile) }}
								</div>

								<div class="uk-margin">
									{{ form_widget(ownerForm.phone) }}
								</div>

								<div class="uk-margin">
									{{ form_widget(ownerForm.address.street) }}
								</div>

								<div class="uk-margin">
									{{ form_widget(ownerForm.address.postCode) }}
								</div>

								<div class="uk-margin">
									{{ form_widget(ownerForm.address.city) }}
								</div>

								<div class="uk-margin">
									{{ form_widget(ownerForm.address.state) }}
								</div>


								<button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">Enregistrer</button>
								<a href="{{ path('dashboard') }}">
									<button type="button" class="uk-button uk-button-secondary uk-width-1-1">Annuler</button>
								</a>

								{{ form_end(ownerForm) }}


							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
