{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Créer un utilisateur
{% endblock %}

{% block extraJs %}
	<script type="text/javascript" src="{{ asset('assets/listCreateUser.js') }}"></script>

{% endblock %}

{% block body %}
	<div uk-grid="" class="uk-child-width-1-1@s uk-child-width-1-1@l uk-grid uk-grid-stack">
		<div class="uk-first-column">
			<div class="uk-card uk-card-default">
				<div class="uk-card-header">
					Créer un utilisateur
				</div>
				<div class="uk-card-body">

					{{ form_start(userForm) }}

					<div class="uk-margin">
						<p>Veuillez choisir le type d'utilisateur que vous souhaitez créer :
						</p>
					</div>

					<div class="uk-margin">
						{{ form_widget(userForm.roles) }}
					</div>

					<div class="uk-margin all">
						{{ form_widget(userForm.firstname) }}
					</div>

					<div class="uk-margin all">
						{{ form_widget(userForm.lastname) }}
					</div>

					<div class="uk-margin all">

						{{ form_widget(userForm.email) }}
					</div>

					<div class="uk-margin all">
						{{ form_widget(userForm.mobile) }}
					</div>

					<div class="uk-margin all">
						{{ form_widget(userForm.phone) }}
					</div>

					<div class="uk-margin noTenant">
						{{ form_row(userForm.address) }}
					</div>

					<div class="uk-margin tenant">
						{{ form_row(userForm.tenantAddressBefore) }}
					</div>

					<div class="uk-margin tenant">
						{{ form_row(userForm.tenantAddressAfter) }}
					</div>


					<button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">Enregistrer</button>
					<a href="{{ path('dashboard') }}">
						<button type="button" class="uk-button uk-button-secondary uk-width-1-1">Annuler</button>
					</a>

					{{ form_end(userForm) }}

				</div>
			</div>
		</div>
	</div>
	

{% endblock %}
