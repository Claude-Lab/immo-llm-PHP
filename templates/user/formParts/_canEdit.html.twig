{{ form_start(form) }}
<div class="uk-margin">
	{{ form_widget(form.firstname) }}
</div>
<div class="uk-margin">
	{{ form_widget(form.lastname) }}
</div>
<div class="uk-margin">
	{{ form_widget(form.email) }}
</div>
<div class="uk-margin">
	{{ form_widget(form.mobile) }}
</div>
<div class="uk-margin">
	{{ form_widget(form.phone) }}
</div>


{% if user.roles[0] == 'ROLE_GUARANTOR' or user.roles[0] == 'ROLE_OWNER' %}
	<div class="uk-margin">
		{{ form_widget(form.address.street) }}
	</div>
	<div class="uk-margin">
		{{ form_widget(form.address.postCode) }}
	</div>
	<div class="uk-margin">
		{{ form_widget(form.address.city) }}
	</div>
	<div class="uk-margin">
		{{ form_widget(form.address.country) }}
	</div>
{% elseif user.roles[0] == 'ROLE_TENANT' %}
	<div class="uk-margin">
		{{ form_widget(form.guarantor) }}
	</div>

<div class="uk-margin-small uk-card-address-before uk-card-default uk-card-body">
	<a class="uk-text-primary">Indiquez l'adresse précédente du locataire</a>
	<a class="uk-text-danger">(avant son eménagement)</a>
	<div class="uk-margin">
		{{ form_widget(form.addressBefore.street) }}
	</div>
	<div class="uk-margin">
		{{ form_widget(form.addressBefore.postCode) }}
	</div>
	<div class="uk-margin">
		{{ form_widget(form.addressBefore.city) }}
	</div>
	<div class="uk-margin">
		{{ form_widget(form.addressBefore.country) }}
	</div>
</div>
<div class="uk-margin-small uk-card-address-after uk-card-default uk-card-body">
	<a class="uk-text-primary">Indiquez l'adresse de départ du locataire</a>
	<a class="uk-text-danger">(après son déménagement)</p>
	<div class="uk-margin">
		{{ form_widget(form.addressAfter.street) }}
	</div>
	<div class="uk-margin">
		{{ form_widget(form.addressAfter.postCode) }}
	</div>
	<div class="uk-margin">
		{{ form_widget(form.addressAfter.city) }}
	</div>
	<div class="uk-margin">
		{{ form_widget(form.addressAfter.country) }}
	</div>
      </div>
{% endif %}


<div class="uk-margin" uk-margin>
	<div uk-form-custom="target: true">
		{{ form_widget(form.avatar) }}
		<input class="uk-input uk-form-width-medium" type="text" placeholder="Selectionnez un avatar" disabled>
	</div>
</div>

<button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">Enregistrer</button>
<a href="{{ path('user_detail', {'id' : user.id}) }}">
	<button type="button" class="uk-button uk-button-secondary uk-width-1-1">Annuler</button>
</a>
{{ form_end(form) }}
