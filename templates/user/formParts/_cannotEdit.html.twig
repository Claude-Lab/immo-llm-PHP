{{ form_start(form) }}
<div class="uk-margin">
	{{ form_widget(form.firstname, { 'attr': { 'disabled': 'true' }}
	) }}

</div>
<div class="uk-margin">
	{{ form_widget(form.lastname, { 'attr': { 'disabled': 'true' }}) }}

</div>
<div class="uk-margin">
	{{ form_widget(form.email, { 'attr': { 'disabled': 'true' }}) }}

</div>
<div class="uk-margin">
	{{ form_widget(form.mobile, { 'attr': { 'disabled': 'true' }}) }}

</div>
<div class="uk-margin">
	{{ form_widget(form.phone, { 'attr': { 'disabled': 'true' }}) }}

</div>
{% if user.roles[0] == 'ROLE_GUARANTOR' %}
	<div class="uk-margin">
		{{ form_widget(form.address.street, { 'attr': { 'disabled': 'true' }}) }}
	</div>
	<div class="uk-margin">
		{{ form_widget(form.address.postCode, { 'attr': { 'disabled': 'true' }}) }}
	</div>
	<div class="uk-margin">
		{{ form_widget(form.address.city, { 'attr': { 'disabled': 'true' }}) }}
	</div>
	<div class="uk-margin">
		{{ form_widget(form.address.country, { 'attr': { 'disabled': 'true' }}) }}
	</div>

{% elseif user.roles[0] == 'ROLE_TENANT' %}
	<div class="uk-margin">
		{{ form_widget(form.housing.address.street, { 'attr': { 'disabled': 'true' }}) }}

	</div>
	<div class="uk-margin">
		{{ form_widget(form.address.postCode, { 'attr': { 'disabled': 'true' }}) }}

	</div>
	<div class="uk-margin">
		{{ form_widget(form.address.city, { 'attr': { 'disabled': 'true' }}) }}

	</div>
	<div class="uk-margin">
		{{ form_widget(form.address.country, { 'attr': { 'disabled': 'true' }}) }}

	</div>
{% endif %}


<div class="uk-margin" uk-margin>
	<div uk-form-custom="target: true">
		{{ form_widget(form.avatar) }}
		<input class="uk-input uk-form-width-medium" type="text" placeholder="Selectionnez votre avatar" disabled>
	</div>
</div>

<button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">Enregistrer</button>
<a href="{{ path('user_profile') }}">

	<button type="button" class="uk-button uk-button-secondary uk-width-1-1">Annuler</button>
</a>
{{ form_end(form) }}
