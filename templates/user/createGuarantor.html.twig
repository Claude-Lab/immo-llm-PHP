{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Créer un garant
{% endblock %}

{% block body %}
	<div uk-grid="" class="uk-child-width-1-1@s uk-child-width-1-1@l uk-grid uk-grid-stack">
		<div class="uk-first-column">
			<div class="uk-card uk-card-default">
				<div class="uk-card-header">
					Créer un garant
				</div>
				<div class="uk-card-body">

					{{ form_start(guarantorForm) }}

					<div class="uk-margin">
						{{ form_widget(guarantorForm.firstname) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(guarantorForm.lastname) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(guarantorForm.email) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(guarantorForm.mobile) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(guarantorForm.phone) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(guarantorForm.address.street) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(guarantorForm.address.postCode) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(guarantorForm.address.city) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(guarantorForm.address.country) }}
					</div>


					<button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">Enregistrer</button>
					<a href="{{ path('dashboard') }}">
						<button type="button" class="uk-button uk-button-secondary uk-width-1-1">Annuler</button>
					</a>

					{{ form_end(guarantorForm) }}


				</div>
			</div>
		</div>
	</div>
{% endblock %}
