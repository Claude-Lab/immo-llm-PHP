<div class="uk-card uk-card-default">
	<div class="uk-card-header">
		Liste de tout les utilisateurs
	</div>
	<div class="uk-card-body">
		{% if users is empty %}
			<div class="uk-placeholder uk-text-center ">
				<h5>Aucun utilisateur à afficher</h5>
				<p>Il semblerait qu'il n'y ait pas d'utilisateur correspondant à votre recherche.</p>
			</div>
		{% else %}
			<table class="uk-table uk-table-responsive uk-table-divider">
				<thead>
					<tr>
						<th>Prénom Nom</th>
						<th>Mobile</th>
						<th>Email</th>
						<th>Role</th>
						<th>Detail</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						{% if user.roles[0] != "ROLE_ADMIN" %}
							<tr>
								<td>{{ user.fullname }}</td>
								<td>{{ user.mobile }}</td>
								<td>{{ user.email }}</td>
								<td>
									{% if user.roles[0]     == 'ROLE_ADMIN' %}
										Manager
									{% elseif user.roles[0] == 'ROLE_OWNER' %}
										Propriétaire
									{% elseif user.roles[0] == 'ROLE_TENANT' %}
										Locataire
									{% elseif user.roles[0] == 'ROLE_GUARANTOR' %}
										Garant
									{% endif %}
								</td>
								<td>
									{% if user.roles[0] != 'ROLE_ADMIN' %}
										<a href="{{ path('user_detail', {'id' : user.id}) }}">
											<button type="button" class="uk-button-small uk-button-primary uk-width-1-1 uk-margin">Detail</button>
										</a>
									{% endif %}
								</td>
							</tr>
						{% endif %}
					{% endfor %}
				</tbody>
			</table>
		{% endif %}
	</div>
</div>
