{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Créer un garant
{% endblock %}

{% block body %}
	<div uk-grid="" class="uk-child-width-1-1@s uk-child-width-1-1@l uk-grid uk-grid-stack">
		<div class="uk-first-column">
			<div class="uk-card uk-card-default">
				<div class="uk-card-header">
					Créer un garant
				</div>
				<div class="uk-card-body">

					{{ form_start(form) }}

					<div class="uk-margin">
						{{ form_widget(form.firstname) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(form.lastname) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(form.email) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(form.mobile) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(form.phone) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(form.address.street) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(form.address.postCode) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(form.address.city) }}
					</div>

					<div class="uk-margin">
						{{ form_widget(form.address.country) }}
					</div>

					<div class="uk-margin" uk-margin>
						<div uk-form-custom="target: true">
							{{ form_widget(form.avatar) }}
							<input class="uk-input uk-form-width-medium" type="text" placeholder="Selectionnez un avatar" disabled>
						</div>
					</div>

					<button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">Enregistrer</button>
					<a href="{{ path('users_list') }}">
						<button type="button" class="uk-button uk-button-secondary uk-width-1-1">Annuler</button>
					</a>

					{{ form_end(form) }}


				</div>
			</div>
		</div>
	</div>
{% endblock %}
